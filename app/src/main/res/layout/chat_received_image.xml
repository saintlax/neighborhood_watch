<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left"
    >

    <LinearLayout
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:background="@drawable/xml_border_box_gray"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_5dp"
        android:paddingLeft="@dimen/pad_5dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/pad_5dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:src="@drawable/smiley"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.10 am"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_14sp"
            android:maxLines="4"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textvdv"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/txt_14sp"
        android:layout_alignRight="@+id/v1"
        android:layout_below="@+id/v1"
        android:layout_marginTop="@dimen/pad_5dp"
        android:layout_marginRight="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_5dp"
        android:layout_marginLeft="@dimen/pad_10dp" />
</LinearLayout>
