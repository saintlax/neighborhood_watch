<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pad_20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/pad_5dp">

                 <EditText
                     android:id="@+id/message"
                     android:layout_width="match_parent"
                     android:layout_height="120dp"
                     android:gravity="start"
                     android:inputType="textMultiLine"
                     android:ems="10"
                     android:hint="Tell Us what is happening"
                     android:imeActionId="7"
                     android:imeActionLabel="Send"
                     android:imeOptions="actionUnspecified"
                     android:maxLines="6"
                     android:singleLine="false" />
             </android.support.design.widget.TextInputLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Click to add Picture or Video(OPTIONAL)"
                 android:id="@+id/add_media"
                 android:layout_marginTop="@dimen/pad_10dp"/>

            <CheckBox
                android:id="@+id/send_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_anonymoulsy_info"
                android:layout_marginTop="@dimen/pad_10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info"
                android:textColor="@color/red"
                android:text="@string/eye_witness_note"
                android:layout_marginTop="@dimen/pad_10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:background="@color/red"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
